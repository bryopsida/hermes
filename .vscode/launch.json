  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Hermes (Mono)",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "USE_CLUSTERING": "true"
      },
      "console":"integratedTerminal",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/build/src/monoApp.js",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}