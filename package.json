{
  "name": "hermes",
  "version": "0.1.0",
  "description": "Collects and receives data which is ingested to a processing pipeline which normalizes to prep for watch evaluations, watches trigger alerts",
  "main": "build/monoApp.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "node_modules/typescript/bin/tsc --project ./",
    "start": "node build/src/monoApp.js",
    "start:dev": "nodemon",
    "start:services": "docker-compose -f docker-compose.yml up -d",
    "stop:services": "docker-compose -f docker-compose.yml down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bryopsida/hermes.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bryopsida/hermes/issues"
  },
  "homepage": "https://github.com/bryopsida/hermes#readme",
  "dependencies": {
    "@bull-board/fastify": "^3.8.1",
    "bull": "^4.1.1",
    "knex": "^0.95.14",
    "librdkafka": "^0.0.0",
    "node-rdkafka": "^2.12.0",
    "pg": "^8.7.1",
    "pino": "^7.4.1",
    "pino-pretty": "^7.2.0"
  },
  "devDependencies": {
    "@types/bull": "^3.15.6",
    "@types/node": "^16.11.10",
    "fastify": "^3.24.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  }
}
